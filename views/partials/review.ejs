<hr>
<div class="container mb-1"></div>
<h5 class=" rounded px-4  mb-0 mb-2">Ratings and Reviews</h5>
<hr>
<% for (let review of product.reviews) {%>
    
            <div class="bg-white rounded shadow-sm px-4 ">
                
                        <div class="media-body">
                            <div class="reviews-members-header">
                                <h6 class="mb-1"><a class="text-black" href="#"><%= review.username  %></a></h6>
                              
                                <p class="text-gray"><%= new Date(review.createdDate).toString().substring(4, 21)%></p>
                               
                            </div>
                            <div class="reviews-members-body">
                                <p><%= review.body  %></p>
                            </div>
                            <div class="reviews-members-body">
                                <div class="d-flex justify-content-between"> <h3 class="mt-1" data-star="<%=review.rating%>"></h3>
                                </p> <% if (signedInUser && signedInUser.username === review.username) { %>
                                    <form action="/balloons/<%= product._id  %>?_method=DELETE" method="POST">
                                        <input type="hidden" name="id" id="id" value="<%= review.id  %>">
                                        <button class="btn btn-danger mb-2">Delete</button>
                                    </form>
                                    <% } %></div>
                                
                            </div>
                        </div>
                        <hr>
                    </div>
                    <% } %>
                <div class="bg-white rounded  px-4 mb-4  rating-review-select-page">
                    <h5 class="mb-4">Leave Review</h5>
                    <p class="mb-2">Rate the Product</p>
                    
                    <form action="/<%=product.category%>/<%=product._id%>/reviews" method="POST" class="validate-form" novalidate>
                        <input  style="width: 445px;" type="range" max="5" min="1" name="rating" id="rating[review]" value="<%= product._id  %>" required>
                    <div class="mb-4"></div>
                        <div class="form-group">
                            <label>Your Review</label>
                            <textarea class="form-control mb-3" name="body" id="body[review]"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="id" value="<%= product._id  %>">
                            <button type="submit" class="btn btn-success">Submit Review</button>
                        </div>
                    </form>
                </div>
            </div>
            </div>         

        
            </div>