<hr>
<div class="container mb-1"></div>
<h5 class=" rounded px-4  mb-0 mb-2">Ratings and Reviews</h5>
<hr>
<% for (let review of listing.reviews) {%>
    <div class="bg-white rounded shadow-sm px-4 ">
                
                        <div class="media-body">
                            <div class="reviews-members-header">
                                <h6 class="mb-1"><a class="text-black" href="#"><%= review.username  %></a></h6>
                              
                                <p class="text-gray"><%= new Date(review.createdDate).toString().substring(4, 21)%></p>
                               
                            </div>
                            <div class="reviews-members-body">
                                <p><%= review.body  %></p>
                            </div>
                            <div class="reviews-members-body">
                                <div class="d-flex justify-content-between"> <h3 class="mt-1" data-star="<%=review.rating%>"></h3>
                             <% if (signedInUser && signedInUser.username === review.username) { %>
                                    <form action="/balloons/<%= listing._id  %>?_method=DELETE" method="POST">
                                        <input type="hidden" name="id" id="id" value="<%= review.id  %>">
                                        <button class="btn btn-danger mb-2">Delete</button>
                                    </form>
                                    <% } %>  </div>
                                
                            </div>
                        </div>
                        <hr>
                       
                    </div>
                    <% } %>
                    
                    
                <div class="bg-white rounded  px-4 mb-4  rating-review-select-page">
                    <h5 class="mb-4">Leave Review</h5>
                    <p class="mb-3">Rate the Listing</p>
                    <form action="/<%=listing.category%>/<%=listing._id%>/reviews" method="POST" class="validate-form" novalidate>
                        <fieldset class="starability-basic">
                            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="rating" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="rating" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="rating" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="rating" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="rating" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                          </fieldset>
                        <div class="form-group">
                            <label>Your Review</label>
                            <textarea class="form-control mb-3" name="body" id="body[review]"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="id" value="<%= listing._id  %>">
                            <button type="submit" class="btn btn-success">Submit Review</button>
                        </div>
                    </form>
                </div>
            </div>
            </div>         

        
            </div>