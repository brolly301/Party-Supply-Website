<% layout('layouts/boilerplate')%>
<div class="container-fluid">
    <h1 class="text-center">My Listings</h1>
    <div>
         
       <% for (let listing of listings)  { %>
        <div class="col-12 col-md-3 mb-4">
            <a class="" href="/balloons/<%= listing._id  %>"><img class="mb-2 img-fluid" src="<%=listing.image%>" style=width:100%;height:350px;></a>
            <h3><%= listing.name  %></h3>
            <h3><%= listing.image  %></h3>
            <h3><%= listing.description  %></h3>
            <h3><%= listing.condition  %></h3>
            <h3><%= listing.price  %></h3>
        </div>
    <% } %>

</div>

