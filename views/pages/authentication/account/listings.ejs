<% layout('layouts/boilerplate')%>
<div class="container">
    <h1 class="text-center">My Listings</h1>
    <div>
        <div class="row">
       <% for (let listing of listings)  { %>
        <div class="col-12 col-md-3 mb-4">
            <a class="" href="/marketplace/listings/<%= listing._id  %>"><img class="mb-2 img-fluid" src="<%=listing.image%>" style=width:100%;height:350px;></a>
            <h3><%= listing.name  %></h3>
            <h3><%= listing.description  %></h3>
            <h3><%= listing.condition  %></h3>
            <h3><%= listing.price  %></h3>
        </div>
        <input type="hidden" name="id" value="<%=listing._id  %>">
        <a href="/marketplace/listings/<%=listing._id %>"><button class="btn btn-primary">View Listing</button></a>
    <% } %>
    </div>
</div>

