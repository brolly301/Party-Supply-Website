<% layout('layouts/boilerplate')%>
<div class="container-fluid text-center mt-4">
    <h1 class="text-center mt-4">My Orders</h1>
    

      <% if (orders < 1 ) {%>
        <h4 >You currently have no previous orders!</h4>
        <hr class="container">
  <div class="d-flex  justify-content-center">
  <a href="/"><button class="btn btn-success  btn-lg basketButton" >New Order</button></a>
</div>
   <img class="img-fluid noPosts " src="https://res.cloudinary.com/dtcoefjmm/image/upload/v1680277108/439690251645016683-128_zts25g.png" alt="">
  </div>
</div>
        <%  } else {%>
    
<section >
  <div class="container py-3">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col" class="h5">No</th>
                <th scope="col" class="h5">OrderID</th>
                <th scope="col">Date</th>
                <th scope="col">Items</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <% for (let i = 0; i<orders.length; i++)  { %>
             
                
            <tbody>
              <tr>
                <td class="align-middle">
                  <p class="mb-0" style="font-weight: 500;"><%=[i+1]%></p>
              </td>
                <td class="align-middle">
                  
                      <p class="mb-2"> <b><%= orders[i].id %></b> </p>
                  
                  </td>
                <td class="align-middle">
                  <p class="mb-0" style="font-weight: 500;"> <b><%=   new Date(orders[i].date).toString().substring(4, 15) %>    </p>
                </td>
                <td class="align-middle">
                  <p class="mb-0 ml-4" style="font-weight: 500;"><%= orders[i].basket.length  %></p>
                </td>
                <td class="align-middle">
                  <p class="mb-0" style="font-weight: 500;">Â£40.29</p>
                </td>
                <td class="align-middle">
                  <a href="/account/<%= signedInUser.username%>/orders/<%= orders[i].id %>" class="mb-0 btn btn-primary" style="font-weight: 500;">View</a>
                </td>
             
                <%}%>
                <%}%>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
</div>




