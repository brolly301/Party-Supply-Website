<% layout('layouts/boilerplate')%>
    <div class="container text-center mt-4">
        <h1>Search</h1>
        <h5 class="page-heading">Enter a search result below </h5>
        <hr>
        <form action="/search" method="GET">
            <input type="text" name="search" id="search">
            <button class="btn btn-secondary mb-1">Search</button>
        </form>
        <div class="row">
            <% products.forEach(product=> {%> <div class="col-12 col-xxl-3  col-lg-4 col-md-6 col-sm-12 mb-4">
                    <a class="" href="/<%=product.category %>/<%= product._id  %>"><img class="mb-2 img-fluid"
                            src="<%=product.image%>" style=width:100%;height:350px;></a>
                    <h5>
                        <%=product.name%>
                    </h5>
                    <h5>
                        <%=product.description%>
                    </h5>
                    <h3>Â£<%=product.price%>
                    </h3>
                    <form action="/basket" method="POST">
                        <input type="hidden" name="id" value="<%= product._id  %>">
                        <button type="submit" class="btn btn-primary">Add to Basket</button>
                    </form>
                </div>
                <%}); %>
        </div>
        <div class="d-flex justify-content-around">
            <% for (let i=0; i < totalProducts.length / productsPerPage - 1; i++) {%>
                <a href="/search?search=<%=search%>&page=<%=[i + 1]%>"><button class="btn btn-secondary my-4">
                        <%=[i + 2]%>
                    </button></a>
                <% } %>
        </div>
    </div>