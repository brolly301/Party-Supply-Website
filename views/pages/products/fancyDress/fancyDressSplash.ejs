<% layout('layouts/boilerplate')%>
    <div class="container text-center">
        <h1>Decorations</h1>
            <div class="row">
                <% for (let i=0; i < fancyDress.length; i++) {%>
                    <div class="col-12 col-md-3 mb-4">
                        <a href="/fancyDress/<%= fancyDress[i].name  %>"><img class="mb-2 img-fluid" src="<%=fancyDress[i].image%>" style=width:100%;height:350px;></a>
                        <h5><%=fancyDress[i].name%></h5>
                        <h5><%=fancyDress[i].description%> </h5>
                       
                        <button>Add to Basket</button>
                    </div>
                    <% } %>
            </div>
    </div>
    </div>