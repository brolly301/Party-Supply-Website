<% layout('layouts/boilerplate')%>
    <div class="container text-center " >

        
        <h1> <%= products[0].category %> </h1>
       

        <div class="mb-3"><%- include('../../partials/sortingDropdown') %></div>
       
    
           <div class="row ">
                    <% for (let i = 0; i < products.length; i++) {%>
                        <div class="col-12 col-md-3 mb-4">
                            <a class="" href="<%= products[i].category.toLowerCase()  %>/<%= products[i]._id  %>"><img class="mb-2 img-fluid" src="<%=products[i].image%>" style=width:100%;height:350px;></a>
                            <h5> <%=products[i].name%></h5>
                            <h5> <%=products[i].description%></h5>
                            <h3>Â£<%=products[i].price%></h3>
                        <form action="/basket" method="POST">
                            <input type="hidden" name="productId" value="<%= products[i]._id  %>">
                            <input type="hidden" name="name" value="<%= products[i].name  %>">
                            <input type="hidden" name="price" value="<%= products[i].price  %>">
                            <input type="hidden" name="quantity" value="<%= products[i].quantity  %>">
                            <input type="hidden" name="image" value="<%= products[i].image  %>">
                            <input type="hidden" name="description" value="<%= products[i].description  %>">
                            <button type="submit" class="btn btn-primary">Add to Basket</button>
                        </form>
                        </div>
                    <% } %>
            </div>
            <div class="d-flex justify-content-around">
                <% for (let i = 0; i < totalProducts.length / productsPerPage; i++) {%>
                    <a href="/<%=name%>?page=<%=[i + 1]%>"><button class="btn btn-secondary my-4"><%=[i + 1]%></button></a>
                    <% } %>
            </div>
    </div>

