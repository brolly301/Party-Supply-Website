<% layout('layouts/boilerplate')%>
    
<div class="d-flex container my-4">
    <img class="ms-5" src="<%= listing.image%>" style=width:40%;height:350px;>
   <div class="row nav justify-content-center text-center me-5">
    <h2><%= listing.name%></h2>
    <h3><%= listing.description%></h3>
    <h3>Â£<%= listing.price%></h3>


    <% if (!signedInUser || signedInUser.username !== listing.username ) { %>
    <div class="mb-5">
        <button>-</button> <span>1</span> <button>+</button>
        <div class="mt-3">
            <form action="/basket" method="POST">
                <input type="hidden" name="id" value="<%= id %>">
                <button type="submit" class="btn btn-primary">Add to Basket</button>
            </form>
           
       <% }else if (signedInUser.username === listing.username){%>
            
            <form action="/marketplace/listings/<%=id%>/edit" method="GET">
                <button type="submit" class="btn btn-success my-3">Edit</button>
            </form>
            <form action="/marketplace/listings/<%=id%>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <% } %>
        </div>
    </div>
</div>
</div>
