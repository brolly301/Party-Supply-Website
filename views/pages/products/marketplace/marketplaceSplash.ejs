<% layout('layouts/boilerplate')%>
    <div class="container text-center mt-4">
        <h1>Marketplace</h1>
        <div>
            <img id="marketplaceSplash" style="width: 100%;"
                src="https://images.unsplash.com/photo-1485182708500-e8f1f318ba72?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1210&q=80"
                alt="">
        </div>
        <div class="row justify-content-center py-2">
            <div class="col-lg-4 col-md-4 col-sm-12 py-2">
                <form action="/marketplace/listings" method="GET">
                    <button class='btn btn-primary btn-block w-100'>Browse Marketplace</button>
                </form>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 py-2">
                <form action="/marketplace/newListing" method="GET">
                    <button class="btn btn-success btn-block w-100">Post New Listing</button>
                </form>
            </div>
            <% if (signedInUser) { %>
                <div class="col-lg-4 col-md-4 col-sm-12 py-2">
                    <form action="/account/<%= signedInUser.username %>/listings" method="GET">
                        <button class="btn btn-warning btn-block w-100">My Listings</button>
                    </form>
                </div>
                <% } %>
        </div>
    </div>