<% layout('layouts/boilerplate')%>
    <div class="container text-center mt-4 " >
        <h1> <%= listings[0].category %> </h1>
        
        <div class="d-flex justify-content-between align-items-center mb-3"><%- include('../../../partials/marketplaceDropdown') %> <h4 class="text-muted">Elevate Your Event with Stunning Balloon Decorations</h4>  <h4> Items(<%= totalProducts.length %>)</h4></div>
           <div class="row ">
            <hr>
                    <% for (let listing of listings) {%>
                     
                        <div class="col-12 col-md-3 mb-4">
                                  <div class="card text-black">
                                    <a class="productMain-item" href="/marketplace/listings/<%= listing._id  %>"><img style="width: 305px"; height="310px"
                                      src=<%=listing.marketplaceImage[0].url%>
                                      class="card-img-top c-img"
                                    />
                                </a>
                                    <div class="card-body">
                                      <div class="text-center">
                                        <h4 class="card-title"><%=listing.name%></h4>
                                        <p class="text-muted mb-2"><%=listing.description%></p>
                                        <h4 class="mb-3">Â£<%=listing.price%></h4>
                                      </div>
                                      
                                      <form action="/basket" method="POST">
                                        <input type="hidden" name="productId" value="<%= listing._id  %>">
                                        <input type="hidden" name="name" value="<%= listing.name  %>">
                                        <input type="hidden" name="price" value="<%= listing.price  %>">
                                        <input type="hidden" name="quantity" value="<%= listing.quantity  %>">
                                        <input type="hidden" name="image" value="<%= listing.image  %>">
                                        <input type="hidden" name="category" value="<%= listing.category  %>">
                                        <input type="hidden" name="description" value="<%= listing.description  %>">
                                        <div> <a class="btn btn-success border border-dark mb-2" href="/marketplace/listings/<%= listings._id  %>"> View</a></div>
                                        <button type="submit" class="btn btn-primary border border-dark">Add to Basket</button>
                                    </form>
                                    </div>
                                  </div>
                              </div>
                    <% } %>
            </div>
            <hr>
            <div class="d-flex justify-content-around mb-4">
              <% for (let i = 0; i < totalProducts.length / productsPerPage - 1; i++) {%>
                <a style="text-decoration:none"  href="/marketplace/listings?page=<%=[i + 1]%>"><h4  class="pageNumber"><%=[i + 2]%></h4></a>
            <% } %>

            </div>   
            
    </div>




