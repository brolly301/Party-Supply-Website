<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="container-fluid">
            <div class="row justify-content-center mt-3 mb-5">
                <div class="col-12 col-md-10">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-lg-5 mb-4 mb-lg-0">
                                    <a class="text-center d-block productShow-item c-item">
                                        <img src="<%= product.image %>" class="img-fluid c-img" alt="Product-img">
                                    </a>
                                </div>
                                <div class="col-12 col-lg-6 ms-lg-4">
                                    <form action="/basket" method="POST">
                                        <h3 class="mt-0">
                                            <%= product.name %>
                                                <a href="javascript: void(0);" class="text-muted">
                                                    <i class="mdi mdi-square-edit-outline ms-2"></i>
                                                </a>
                                        </h3>
                                        <div class="mt-3">
                                            <h5><span>Reviews</span></h5>
                                            <h3 class="mt-1" data-star="<%= overallReview %>"></h3>
                                            <div class="mt-2">
                                                <h6 class="font-14">Price:</h6>
                                                <h3>Â£<%= product.price %>
                                                </h3>
                                            </div>
                                            <!-- Quantity -->
                                            <div class="mt-4">
                                                <h6 class="font-14">Quantity</h6>
                                                <div class="d-flex">
                                                    <input type="number" name="scrollQTY" min="1" value="1"
                                                        class="form-control" placeholder="Qty" style="width: 90px;">
                                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                                    <input type="hidden" name="name" value="<%= product.name %>">
                                                    <input type="hidden" name="price" value="<%= product.price %>">
                                                    <input type="hidden" name="quantity"
                                                        value="<%= product.quantity %>">
                                                    <input type="hidden" name="image" value="<%= product.image %>">
                                                    <input type="hidden" name="description"
                                                        value="<%= product.description %>">
                                                    <input type="hidden" name="category"
                                                        value="<%= product.category %>">
                                                    <button type="submit" class="btn btn-primary ms-2">Add to
                                                        Basket</button>
                                                </div>
                                            </div>
                                            <!-- Product description -->
                                            <div class="mt-4">
                                                <h6 class="font-14">Description:</h6>
                                                <p>Introducing our new product, designed to enhance your daily life in a
                                                    multitude of ways. Our product is crafted with the highest quality
                                                    materials and innovative technology, ensuring durability and
                                                    reliability for years to come.</p>
                                            </div>
                                        </div>
                                    </form>
                                </div> <!-- end col -->
                            </div> <!-- end row-->
                        </div> <!-- end card-body-->
                        <%- include('../../partials/review') %>
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div> <!-- end container-fluid -->
    </div> <!-- end container -->