<% layout('layouts/boilerplate')%>
    <div class="container">



        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                        <h4 class="page-title">Product Details</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-5">
                                    <!-- Product image -->
                                    <a href="javascript: void(0);" class="text-center d-block mb-4">
                                        <img src="<%= product.image  %>" class="img-fluid" style="width: 360px; height: 400px;"  alt="Product-img">
                                    </a>
                                </div> <!-- end col -->
                                <div class="col-lg-7">
                                    <form action="/basket" method="POST"  class="ps-lg-4">  
                                        <!-- Product title -->
                                        <h3 class="mt-0"><%= product.name  %><a href="javascript: void(0);" class="text-muted"><i class="mdi mdi-square-edit-outline ms-2"></i></a> </h3>
                                        <!-- Product stock -->
                                        <div class="mt-3">
                                            <h5 class=""><span>Rating</span></h5>
                                            <h5 class=""><span>* * * * * </span></h5>
                                        </div>

                                        <!-- Product description -->
                                        <div class="mt-4">
                                            <h6 class="font-14"> Price:</h6>
                                            <h3> Â£<%= product.price  %></h3>
                                        </div>
                                        <!-- Quantity -->
                                        <div class="mt-4">
                                            <h6 class="font-14">Quantity</h6>
                                            <div class="d-flex">
                                                <input type="number" min="1" value="1" class="form-control" placeholder="Qty" style="width: 90px;">
                                                <input type="hidden" name="productId" value="<%= product._id  %>">
                                                    <input type="hidden" name="name" value="<%= product.name  %>">
                                                    <input type="hidden" name="price" value="<%= product.price  %>">
                                                    <input type="hidden" name="quantity" value="<%= product.quantity  %>">
                                                    <input type="hidden" name="image" value="<%= product.image  %>">
                                                    <input type="hidden" name="description" value="<%= product.description  %>">
                                                    <button type="submit" class="btn btn-primary ms-2">Add to Basket</button>
                                            </div>
                                        </div>
                            
                                        <!-- Product description -->
                                        <div class="mt-4">
                                            <h6 class="font-14">Description:</h6>
                                            <p><%= product.description  %> </p>
                                        </div>

                                    </form>
                                </div> <!-- end col -->
                            </div> <!-- end row-->
                        </div> <!-- end card-body-->
                        <%- include('../../partials/review') %>
<div>
    <h2 class="text-center">All Reviews</h2>
    <% for (let review of product.reviews) {%>
        <div class="border container-fluid mb-2">
        <h3><%= review.username  %>'s Review:</h3>
        <h4 class="mb-3"><%= review.body  %></h4>
        <h3>Rating:</h3>
        <h4><%= review.rating  %>/5</h4>

        <% if (signedInUser && signedInUser.username === review.username) { %>
        <form action="/balloons/<%= product._id  %>?_method=DELETE" method="POST">
            <input type="hidden" name="id" id="id" value="<%= review.id  %>">
            <button class="btn btn-danger mb-2">Delete</button>
        </form>
        <% } %>
    </div>
        <% } %>
 </div>
                    </div> <!-- end card-->
                    
                </div> <!-- end col-->
                
            </div>
            <!-- end row-->
            
        </div> <!-- container -->



</div>
