<% layout('layouts/boilerplate')%>
<div class="container">
      <h1 class="text-center">Packages</h1>

      <% for (let i = 0; i<package.length; i++) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img style="width: 500px; height: 300px;" class="img-fluid" src="<%=package[i].image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title">
                            <%=package[i].name%>
                        </h2>
                        <p class="card-text">
                            <%=package[i].description%>
                        </p>
                        <h3 class="card-text">
                                Â£<%=package[i].price%>
                        </h3>
                        <form class="d-inline" action="/basket" method="POST">
                            <input type="hidden" name="productId" value="<%= package[i]._id  %>">
                            <input type="hidden" name="name" value="<%= package[i].name  %>">
                            <input type="hidden" name="price" value="<%= package[i].price  %>">
                            <input type="hidden" name="quantity" value="<%= package[i].quantity  %>">
                            <input type="hidden" name="image" value="<%= package[i].image  %>">
                            <input type="hidden" name="description" value="<%= package[i].description  %>">
                          
                          <button type="submit" class="btn btn-primary">Add to Basket</button>
                        </form>
                       <a href="/packages/<%=package[i]._id%>" class="btn btn-primary" >More Details</a>
                    </div>
                </div>
            </div>
        </div>
        <%  } %>

      
</div>