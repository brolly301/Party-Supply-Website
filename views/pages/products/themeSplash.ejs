<% layout('layouts/boilerplate')%>
    <div class="container text-center">
        <h1>Fancy Dress</h1>
            <div class="row">
                <% for (let i=0; i < products.length; i++) {%>
                    <div class="col-12 col-md-4 mb-4">
                        <a href="/themes/<%= subCategory  %>/<%= products[i].name.toLowerCase().replace(/ /g, "")   %>"><img class="mb-2 img-fluid" src="<%=products[i].image%>" style=width:100%;height:350px;></a>
                        <h5><%=products[i].name%></h5>
                        <h5><%=products[i].description%> </h5>
                    </div>
                    <% } %>
            </div>
    </div>
    </div>